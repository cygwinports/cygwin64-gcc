TOOLCHAIN_TARGET="x86_64-pc-cygwin"
inherit toolchain

NAME="cygwin64-gcc"
VERSION=4.9.2
RELEASE=1
CATEGORY="Devel"
SUMMARY="GCC for Cygwin 64bit toolchain"
DESCRIPTION="The GNU Compiler Collection includes front ends for C, C++,
Objective-C, Fortran, Java, and Ada, as well as libraries for these languages
(libstdc++, libgcj,...)."
HOMEPAGE="http://gcc.gnu.org/"

case ${VERSION} in
*.*-20[1-9][0-9][0-1][0-9][0-3][0-9])
	SRC_URI="mirror://gcc/snapshots/${VERSION}/gcc-${VERSION}.tar.bz2" ;;
*)	SRC_URI="mirror://gnu/gcc/gcc-${VERSION}/gcc-${VERSION}.tar.bz2" ;;
esac
SRC_DIR="gcc-${VERSION}"

PATCH_URI="
	gcc/0001-share-mingw-fset-stack-executable-with-cygwin.patch
	gcc/0002-boehm-gc-for-cygwin.patch
	gcc/0003-AWT-Font-fix-for-Cygwin.patch
	gcc/0004-Cygwin-ioctl-may-emit-EINVAL.patch
	gcc/0005-use-avoid-version-if-not-tracking-SO-version.patch
	gcc/0006-cygwin-uses-cyg-library-prefix.patch
	gcc/0007-bump-libgcj-version.patch
	gcc/0008-libatomic-libtool-fixes-for-Cygwin.patch
	gcc/0009-support-64bit-cygwin-too.patch
	gcc/0010-Avoid-installing-libffi.patch
	gcc/0011-libitm-libtool-fixes-for-Cygwin.patch
	gcc/0012-Cygwin-uses-sysv-ABI-on-x86_64.patch
	gcc/0013-Do-not-version-lto-plugin-on-cygwin-mingw.patch
	gcc/0014-add-dummy-pthread-tsaware-and-large-address-aware-fo.patch
	gcc/0014a-add-dummy-pthread-tsaware-and-large-address-aware-fo.patch
	gcc/0015-handle-dllimport-properly-in-medium-model.patch
	gcc/0016-skip-test-for-cygwin-mingw.patch
	gcc/0017-64bit-Cygwin-uses-SEH.patch
	gcc/0018-define-RTS_CONTROL_ENABLE-and-DTR_CONTROL_ENABLE-for.patch
	gcc/0019-fix-some-implicit-declaration-warnings.patch
	gcc/0020-fix-gnat-DLL-prefix-for-Cygwin.patch
	gcc/0021-__cxa-atexit-for-Cygwin.patch
	gcc/0022-prevent-modules-from-being-unloaded-before-their-dto.patch
	gcc/0023-Attempt-to-fix-dw2-unwinder-for-Cygwin.patch
	gcc/0024-Restore-compile-mode-pthread.patch
	gcc/0025-fix-cygwin-stdint.patch
	4.6-textdomain.patch
"

CYGCONF_ARGS="
	--libexecdir=/usr/lib
	--enable-shared --enable-shared-libgcc --enable-static
	--enable-version-specific-runtime-libs
	--enable-__cxa_atexit
	--with-dwarf2
	--with-arch-32=i686 --with-tune=generic
	--enable-languages=ada,c,c++,fortran,${NOTYET+java,}lto,objc,obj-c++
	--enable-graphite
	--enable-linker-build-id
	--enable-threads=posix
	--enable-libatomic
	--enable-libgomp
	--disable-libitm
	--enable-libquadmath
	--enable-libquadmath-support
	--enable-libssp
	--enable-libada
	${NOTYET+--enable-libjava}
	--enable-libgcj-sublibs
	--disable-java-awt
	--disable-symvers
	--with-ecj-jar=/usr/share/java/ecj.jar
	--with-gnu-ld --with-gnu-as
	--with-cloog-include=/usr/include/cloog-isl
	--without-libiconv-prefix
	--without-libintl-prefix
	--with-system-zlib
"

src_install() {
	cd ${B}
	cyginstall -j1

	# Remove Cygwin-host libiberty.a
	rm -f ${D}/usr/lib/libiberty.a

	# Workaround GCC install bug
	mv ${D}/usr/lib/gcc/${TOOLCHAIN_TARGET}/lib/libgcc_s.dll.a ${D}/usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/

	dodir ${TOOLCHAIN_SYSROOT}/usr/bin
	mv $(find ${D}/ -name 'cyggcc_s*.dll') ${D}${TOOLCHAIN_SYSROOT}/usr/bin/

	# conflicts with native gcc
	rm -fr ${D}/usr/share/{gcc-*,info,locale,man/man7}
}

KEEP_LA_FILES="none"

PKG_NAMES="${NAME}-core ${NAME}-g++ ${NAME}-fortran ${NAME}-objc ${NAME}-objc++ ${NAME}-ada"
cygwin64_gcc_core_REQUIRES="cygwin64-binutils cygwin64 cygwin64-default-manifest cygwin64-w32api-runtime"
cygwin64_gcc_core_SUMMARY="${SUMMARY} (C, OpenMP)"
cygwin64_gcc_core_CONTENTS="
	--exclude=c++ --exclude=objc --exclude=gcj --exclude=jni*.h
	usr/bin/${TOOLCHAIN_TARGET}-cpp.exe
	usr/bin/${TOOLCHAIN_TARGET}-gcc.exe
	usr/bin/${TOOLCHAIN_TARGET}-gcc-*.exe
	usr/bin/${TOOLCHAIN_TARGET}-gcov.exe
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/cc1.exe
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/collect2.exe
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/crt*.o
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/cyglto_plugin.dll
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/include-fixed/
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/include/
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/install-tools/
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/libatomic.*
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/libgcc*
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/libgcov.*
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/libgomp.*
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/libquadmath.*
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/libssp*
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/lto*.exe
	usr/share/doc/
	usr/share/man/man1/${TOOLCHAIN_TARGET}-cpp.1*
	usr/share/man/man1/${TOOLCHAIN_TARGET}-gcc.1*
	usr/share/man/man1/${TOOLCHAIN_TARGET}-gcov.1*
	${TOOLCHAIN_SYSROOT#/}/usr/bin/cygatomic-1.dll
	${TOOLCHAIN_SYSROOT#/}/usr/bin/cyggcc_s-seh-1.dll
	${TOOLCHAIN_SYSROOT#/}/usr/bin/cyggomp-1.dll
	${TOOLCHAIN_SYSROOT#/}/usr/bin/cygquadmath-0.dll
	${TOOLCHAIN_SYSROOT#/}/usr/bin/cygssp-0.dll
"
cygwin64_gcc_g___REQUIRES="cygwin64-gcc-core"
cygwin64_gcc_g___SUMMARY="${SUMMARY} (C++)"
cygwin64_gcc_g___CONTENTS="
	--exclude=gcj --exclude=gnu --exclude=java --exclude=javax --exclude=org
	--exclude=*-gdb.py
	usr/bin/${TOOLCHAIN_TARGET}-c++.exe
	usr/bin/${TOOLCHAIN_TARGET}-g++.exe
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/cc1plus.exe
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/include/c++/
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/libstdc++.*
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/libsupc++.*
	usr/share/man/man1/${TOOLCHAIN_TARGET}-g++.1*
	${TOOLCHAIN_SYSROOT#/}/usr/bin/cygstdc++-6.dll
"
cygwin64_gcc_fortran_SUMMARY="${SUMMARY} (Fortran)"
cygwin64_gcc_fortran_REQUIRES="${NAME}-core"
cygwin64_gcc_fortran_CONTENTS="
	usr/bin/${TOOLCHAIN_TARGET}-gfortran.exe
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/finclude/
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/f951.exe
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/libcaf_single.a
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/libgfortran*
	usr/share/man/man1/${TOOLCHAIN_TARGET}-gfortran.1*
	${TOOLCHAIN_SYSROOT#/}/usr/bin/cyggfortran-3.dll
"
cygwin64_gcc_objc_SUMMARY="${SUMMARY} (Objective-C)"
cygwin64_gcc_objc_REQUIRES="${NAME}-core"
cygwin64_gcc_objc_CONTENTS="
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/include/objc/
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/cc1obj.exe
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/libobjc.*
	${TOOLCHAIN_SYSROOT#/}/usr/bin/cygobjc-4.dll
"
cygwin64_gcc_objc___SUMMARY="${SUMMARY} (Objective-C++)"
cygwin64_gcc_objc___REQUIRES="${NAME}-core ${NAME}-g++ ${NAME}-objc"
cygwin64_gcc_objc___CONTENTS="
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/cc1objplus.exe
"
cygwin64_gcc_ada_SUMMARY="${SUMMARY} (Ada)"
cygwin64_gcc_ada_REQUIRES="${NAME}-core"
cygwin64_gcc_ada_CONTENTS="
	usr/bin/${TOOLCHAIN_TARGET}-gnat*.exe
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/adainclude/
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/adalib/
	usr/lib/gcc/${TOOLCHAIN_TARGET}/${VERSION/-*/.*}/gnat1.exe
"
